@model Pizza[];


@{
    ViewData["Title"] = "Le pizze";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var pizza = Model;
}

  <h1>@ViewData["Message"]</h1>
        <main role="main" class="pb-3">
            <div class="background-img">
                
                <div class="w-75 m-auto bg-dark">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrizione</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Prezzo</th>
                        <th scope="col">Azioni</th>
                    </tr>
                </thead>
                <tbody>
            @for(int i = 0; i < pizza.Length; i++)
            {
                
                    <tr>    
                        <th scope="row">@pizza[i].Id</th>
                        <td>@pizza[i].Name</td>
                        <td> @pizza[i].Description</td>
                        <td><img src="@pizza[i].Image"></td>
                        <td>@pizza[i].Price €</td>
                         <td>
                            <a class="btn btn-success" href="@Url.Action("Details","Pizza",new{Id = pizza[i].Id})">visualizza</a>
                            <br>
                            <a class="btn btn-warning my-2" href="@Url.Action("Update","Pizza",new{Id = pizza[i].Id})">modifica</a>
                            <br>
                            <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza[i].Id" method="post">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-danger" type="submit">Cancella</button>
                            </form>
                        </td>
                        
                    </tr>
            }
                    
                </tbody>
            </table>
        </div>
            </div>
        </main>



